universe = vanilla
executable = /opt/PepPrograms/qualimap_v2.2.1/qualimap
arguments = "bamqc -bam $(RUN).sort.bam -outdir $(RUN)_bamqc --java-mem-size=2G"

output = bamqc_$(RUN).out
error = bamqc_$(RUN).err
log = bamqc_$(RUN).log

should_transfer_files = YES
when_to_transfer_output = ON_EXIT
transfer_input_files = $(RUN).sort.bam

request_cpus = 4
request_memory = 2GB
request_disk = 2GB

queue
