universe = vanilla
executable = /opt/PepPrograms/TrimGalore-0.5.0/trim_galore
arguments = "--fastqc_args '-t 4' --retain_unpaired --paired $(RUN)_1.fastq $(RUN)_2.fastq"

output = trim_$(RUN).out
error = trim_$(RUN).err
log = trim_$(RUN).log

transfer_executable = FALSE
should_transfer_files = YES
when_to_transfer_output = ON_EXIT
transfer_input_files = $(RUN)_1.fastq,$(RUN)_2.fastq

request_cpus = 4
request_memory = 1GB
request_disk = 2GB

queue
