universe = vanilla
executable = /opt/PepPrograms/FastQC-0.11.8/fastqc
arguments = "$(RUN)_1.fastq $(RUN)_2.fastq -t 4"

output = fastqc_$(RUN).out
error = fastqc_$(RUN).err
log = fastqc_$(RUN).log

transfer_executable = FALSE
should_transfer_files = YES
when_to_transfer_output = ON_EXIT
transfer_input_files = $(RUN)_1.fastq, $(RUN)_2.fastq

request_cpus = 4
request_memory = 1GB
request_disk = 2GB

queue
